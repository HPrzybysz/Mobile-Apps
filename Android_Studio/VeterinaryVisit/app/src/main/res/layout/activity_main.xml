<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#90EE90"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E8B57"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/vet_visit_title"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ownerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/owner_name_hint"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/speciesLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/species_label"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/speciesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#90EE90"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ageLabelTextView"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_weight="-1"
            android:text="ile ma lat"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ageValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#90EE90"
            android:gravity="center"
            android:minWidth="48dp"
            android:padding="8dp"
            android:text="@string/initial_age"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/ageSeekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:max="20"
            android:progress="0" />

    </LinearLayout>

    <!-- Visit Purpose -->
    <EditText
        android:id="@+id/visitPurposeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/visit_purpose_hint"
        android:inputType="textMultiLine"
        android:minHeight="100dp" />

    <EditText
        android:id="@+id/appointmentTimeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:inputType="time"
        android:padding="8dp"
        android:text="@string/default_time" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="@string/ok_button"
        android:textSize="18sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#90EE90"
        android:padding="16dp"
        android:textSize="14sp"
        android:visibility="visible" />

</LinearLayout>