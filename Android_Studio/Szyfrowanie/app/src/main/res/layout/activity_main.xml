<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F9EA0"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5F9EA0"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="20dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textView"
                style="@style/TextLook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Podaj wartość klucza" />

            <EditText
                android:id="@+id/keyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:background="@color/white"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextLook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Podaj tekst" />

            <EditText
                android:id="@+id/toCipherTextField"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/cipherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#ADD8E6"
                android:gravity="center"
                android:text="Zaszyfruj"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextLook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Tekst zaszyfrowany" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/CipheredOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="#F0F8FF" />
            </LinearLayout>

            <Button
                android:id="@+id/saveToFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ADD8E6"
                android:text="Zapisz szyfr w pliku"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>